@model IEnumerable<DSUHvZ.Models.Game>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create Game", "New", "Game", null, new { @class = "btn btn-primary" } )
</p>

<table class="table table-bordered table-hover">
    <tr>
        <th>Game Name</th>
        <th>Game ID</th>
    </tr>
    @foreach (var game in Model)
    {
        <tr>
            <td>@Html.ActionLink(game.Name, "View", "Game", new { id = game.ID }, null)</td>
            <td>@game.ID</td>
        </tr>
    }
</table>